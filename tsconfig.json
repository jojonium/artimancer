{
  "compilerOptions": {
    "module": "system",
    "target": "es5",
    "noImplicitAny": true,
    "lib": [ "es2018", "dom" ],
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "outFile": "static/main.js",
    "baseUrl": ".",
    "diagnostics": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}
