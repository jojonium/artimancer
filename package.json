{
  "name": "unnamed-turn-based-rpg",
  "version": "0.0.1",
  "description": "A simple turn-based RPG made for the web",
  "private": true,
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint 'src/**/*' --ext .ts --quiet --fix",
    "prebuild": "npm run lint",
    "build": "tsc && browserify dist/main.js -o static/bundle.js",
    "watch-js": "watchify -v -d dist/main.js -o static/bundle.js",
    "watch-ts": "tsc --watch",
    "watch": "npm run watch-js & npm run watch-ts & npm run start",
    "start": "node index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jojonium/unnamed-turn-based-rpg.git"
  },
  "keywords": [
    "game",
    "rpg"
  ],
  "author": "Joseph Petitti",
  "license": "GPL-3.0-or-later",
  "bugs": {
    "url": "https://github.com/jojonium/unnamed-turn-based-rpg/issues"
  },
  "homepage": "https://github.com/jojonium/unnamed-turn-based-rpg#readme",
  "devDependencies": {
    "@types/css-font-loading-module": "0.0.2",
    "@types/express": "^4.17.2",
    "@typescript-eslint/eslint-plugin": "^2.16.0",
    "@typescript-eslint/parser": "^2.16.0",
    "browserify": "^16.5.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.9.0",
    "eslint-plugin-prettier": "^3.1.2",
    "prettier": "^1.19.1",
    "typescript": "^3.7.5"
  },
  "dependencies": {
    "express": "^4.17.1",
    "watchify": "^3.11.1"
  }
}
